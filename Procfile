web: DJANGO_SETTINGS_MODULE=workpro.settings gunicorn workpro.wsgi --bind 0.0.0.0:$PORT --workers 2 --timeout 60
release: DJANGO_SETTINGS_MODULE=workpro.settings python manage.py migrate && (DJANGO_SETTINGS_MODULE=workpro.settings python manage.py createsuperuser --noinput --username=$DJANGO_SUPERUSER_USERNAME --email=$DJANGO_SUPERUSER_EMAIL 2>/dev/null || true) && DJANGO_SETTINGS_MODULE=workpro.settings python manage.py shell -c "from django.contrib.auth.models import User; import os; u = User.objects.filter(username=os.getenv('DJANGO_SUPERUSER_USERNAME')).first(); u and u.set_password(os.getenv('DJANGO_SUPERUSER_PASSWORD')); u and u.save()" && DJANGO_SETTINGS_MODULE=workpro.settings python manage.py collectstatic --noinput